<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_receiver_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/receiver_message_background"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="14sp"
        android:text="message"/>
    <TextView
        android:id="@+id/tv_sender_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="@+id/tv_receiver_message"
        android:background="@drawable/sender_message_background"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="14sp"
        android:text="message"/>

</RelativeLayout>